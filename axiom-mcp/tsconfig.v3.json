{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist-v3",
    "rootDir": "./src-v3",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src-v3/**/*"
  ],
  "exclude": ["node_modules", "dist-v3", "**/*.test.ts", "**/*.spec.ts", "src", "dist", "archive-v1"]
}